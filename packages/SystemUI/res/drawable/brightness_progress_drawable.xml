<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:gravity="fill_horizontal|center"
        android:id="@android:id/background">
        <shape
            android:tint="#ff1e1e1e"
            android:shape="rectangle">
            <stroke
                android:width="2.0dip"
                android:color="#a36daab2" />
            <size
                android:height="5.0dip" />
            <solid
                android:color="#ff1a1a1a" />
            <corners
                android:radius="25.0dip" />
        </shape>
    </item>
    <item
        android:gravity="fill_horizontal|center"
        android:id="@android:id/progress">
        <scale
            android:scaleWidth="100%">
            <inset
                android:insetLeft="0.0dip"
                android:insetRight="-17.0dip">
                <shape
                    android:tint="?android:colorControlActivated"
                    android:shape="rectangle">
                    <stroke
                        android:width="2.0dip"
                        android:color="#a36daab2" />
                    <size
                        android:height="35.0dip" />
                    <solid
                        android:color="@android:color/white" />
                    <corners
                        android:radius="25.0dip" />
                </shape>
            </inset>
        </scale>
    </item>
</layer-list>
