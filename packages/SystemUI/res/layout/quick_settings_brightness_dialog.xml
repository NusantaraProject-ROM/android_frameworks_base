<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_gravity="center_vertical"
    android:paddingLeft="0.0dip"
    android:paddingRight="0.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    style="@style/BrightnessDialogContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:systemui="http://schemas.android.com/apk/res-auto">
    <ImageView
          android:id="@+id/brightness_level"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_gravity="center_vertical"
          android:contentDescription="@null"
          android:layout_marginStart="16dp"
          android:layout_marginEnd="0dp"
          android:scaleType="centerInside"
          android:src="@drawable/ic_flower" />

    <ImageButton
        android:layout_gravity="center_vertical"
        android:id="@+id/brightness_left"
        android:background="?android:selectableItemBackgroundBorderless"
        android:layout_width="36.0dip"
        android:layout_height="48.0dip"
        android:src="@drawable/ic_brightness_left"
        android:contentDescription="@null"
        android:layout_marginStart="16.0dip" />
    <com.android.systemui.settings.ToggleSliderView
        android:layout_gravity="center_vertical"
        android:id="@+id/brightness_slider"
        android:paddingLeft="0.0dip"
        android:paddingRight="0.0dip"
        android:layout_width="0.0dip"
        android:layout_height="48.0dip"
        android:layout_weight="1.0"
        android:contentDescription="@string/accessibility_brightness"
        android:importantForAccessibility="no"
        systemui:text="@string/status_bar_settings_auto_brightness_label" />
    <ImageButton
        android:layout_gravity="center_vertical"
        android:id="@+id/brightness_right"
        android:background="?android:selectableItemBackgroundBorderless"
        android:layout_width="36.0dip"
        android:layout_height="48.0dip"
        android:src="@drawable/ic_brightness_right"
        android:contentDescription="@null"
        android:layout_marginEnd="16.0dip" />
    <ImageButton
        android:layout_gravity="center_vertical"
        android:id="@+id/brightness_icon"
        android:background="?android:selectableItemBackgroundBorderless"
        android:layout_width="36.0dip"
        android:layout_height="48.0dip"
        android:src="@drawable/ic_qs_brightness_auto_off"
        android:contentDescription="@null"
        android:layout_marginStart="0.0dip"
        android:layout_marginEnd="10.0dip" />
</LinearLayout>